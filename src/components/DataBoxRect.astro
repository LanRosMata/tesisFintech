---
import IconFlecha2 from "../components/IconFlecha2.astro";

type Props = {
  data: string;
  description: string;
  class?: string;
};
const { data, description, class: className = "" } = Astro.props;
---

<div
  class="data-card-rect relative w-4/5 lg:w-full h-auto p-5 lg:p-10 flex flex-col justify-self-start gap-2 bg-white border-secondary-2 border-1 rounded-lg shadow-xl shadow-secondary-2/50"
>
  <IconFlecha2 class="flecha rotate-90 absolute -left-[18%] md:-left-[8%] lg:-left-[2.5%]" />
  <p
  class="font-bold text-xl lg:text-3xl text-left text-secondary-2">
    {data}
  </p>
  <p class="text-xl lg:text-3xl text-primary text-left">{description}</p>

</div>
