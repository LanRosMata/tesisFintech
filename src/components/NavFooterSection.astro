---
type Props = {
  anterior :
    {
      href: string;
      text: string;
    };
  siguiente :
    {
      href: string;
      text: string;
    };
}
const { anterior, siguiente } = Astro.props;

---

<footer
  class="flex flex-col items-center justify-center-safe min-h-screen bg-background-2 px-10 not-only-of-type:"
>
  <div class="text-center mb-20 py-5"
    >
    <h2 class="gradiant-text md:text-8xl py-5">
      Avanzar o regresar en los temas
    </h2>
  </div>
  <div
    class="flex flex-col-reverse lg:flex-row items-center justify-center md:justify-between gap-20 md:gap-10"
  >
    <a href={anterior.href} class="">
      <div class=` text-center flex flex-col items-center justify-center  `>
        <div
          class="z-10 bg-white mx-10 flex flex-row items-center justify-center gap-2 rounded-lg shadow-lg"
        >
          <p
            class="py-12 px-2 md:px-5 text-3xl md:text-5xl text-white bg-secondary"
          >
            {"<<"}
          </p>
          <div class="flex flex-col text-left lg:px-15 p-1">
            <p class="font-bold text-secondary md:text-2xl">Anterior</p>
            <h3 class="text-3xl md:text-5xl text-primary">
              {anterior.text}
            </h3>
          </div>
        </div>
      </div>
    </a>

    <a href={siguiente.href} class="">
      <div class=` text-center flex flex-col items-center justify-center `>
        <div
          class="z-10 bg-white mx-10 flex flex-row items-center justify-center gap-2 rounded-lg shadow-lg"
        >
          <div class="flex flex-col text-right lg:px-15 p-1">
            <p class="font-bold text-secondary md:text-2xl">Siguiente</p>
            <h3 class="text3xl md:text-5xl text-primary">
              {siguiente.text}
            </h3>
          </div>
          <p
            class="py-12 px-2 md:px-5 text-3xl md:text-5xl text-white bg-secondary"
          >
            {">>"}
          </p>
        </div>
      </div>
    </a>
  </div>
  <div class="mt-40 text-center mb-5">
    <p class="text-white">Presentaci√≥n de Tesis.</p>
    <p class="text-white">
      Sitio realizado por <a
        href="https://allanrosales.dev"
        class="text-secondary-2">allanrosales.dev</a
      > | 2025
    </p>
  </div>
</footer>

<style>
    .gradiant-text {
    width: fit-content;
      color: #3d56cf; 
      background-image: linear-gradient(45deg, var(--color-secondary-2) , var(--color-secondary)); 
      background-clip: text; 
      -webkit-background-clip: text; 
      -webkit-text-fill-color: transparent;
  }
</style>