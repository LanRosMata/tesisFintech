---
import IconFlecha2 from "../components/IconFlecha2.astro";

type Props = {
  data: string;
  description: string;
  class?: string;
}
const { data, description, class: className = "" } = Astro.props;

---

<div
  class=`relative w-[320px] md:w-[400px] min-h-[420px] md:min-h-[540px] p-5 flex flex-col items-center justify-self-start text-center gap-5 bg-white border-secondary-2 border-1 rounded-lg shadow-xl shadow-secondary-2/50 ${className}`
>
<div class="flex flex-row ">
    <IconFlecha2 class="rotate-90 absolute -left-[10%]" />
    <p class="font-bold text-4xl md:text-5xl text-secondary-2 text-shadow-background-1/10 text-shadow-lg ">{ data }</p>
  </div>
  <div class="">
    <p class="text-2xl md:text-3xl text-primary text-left">{ description }</p>
  </div>
</div>
