---
import SectionScreen from '../../components/SectionScreen.astro';
import TitleCard from '../../components/TitleCard.astro';
import MapHN from '../../assets/img/svg/MapHN.svg'

---

<SectionScreen tipo="degradado-1" class="st-MT relative overflow-hidden">
  <TitleCard numero="01" titulo="Marco TeÃ³rico" class="tl-mt z-50 w-screen h-auto" />
  <MapHN
    class="absolute z-0 -top-[5%] w-screen h-full scale-200 fill-background-1/20"
  />
  
</SectionScreen>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin( ScrollTrigger, SplitText );

  const tlMT = gsap.timeline({
    scrollTrigger: {
      trigger: '.tl-mt',
      start: "top center",
      end: "320% center",
      pin: true,
      scrub: 1,
      markers: false,
    }
  })

  tlMT
    .fromTo(".tl-mt",{
      x: 0,
      y: 100,
      opacity: 0,
      rotateX: 0,
      scale: 1,
    },{
      x: 0,
      y: "-50%",
      rotateX: 0,
      opacity: 1,
      scale: 1,
    })
    .to(".tl-mt", {
      x: "-40%",
      y: "-86%",
      scale:0.4,
    }, ">+=2")
    .to(".tl-mt", {
      x: "-40%",
      y: "-120%",
    }, ">+=5")
    

</script>