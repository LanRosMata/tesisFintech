---
import SectionScreen from '../../components/SectionScreen.astro';
import TitleCard from '../../components/TitleCard.astro';
import MapHN from '../../assets/img/svg/MapHN.svg'

---
<SectionScreen tipo="degradado-1" class="hero relative overflow-hidden hero">
  <TitleCard numero="05" titulo="Normas y LegislaciÃ³n" class="st-at z-50" />
  <MapHN class="absolute z-0 -top-[5%] w-screen h-full scale-200 fill-background-1/20" />
</SectionScreen>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin( ScrollTrigger, SplitText );

  const tlMT = gsap.timeline({
    scrollTrigger: {
      trigger: '.st-at',
      start: "top center",
      end: "660% center",
      pin: true,
      scrub: 1,
      markers: false,
    }
  })

  tlMT
    .fromTo(".st-at",{
      x: 0,
      y: 100,
      opacity: 0,
      rotateX: 0,
      scale: 1,
    },{
      x: 0,
      y: "-50%",
      rotateX: 0,
      opacity: 1,
      scale: 1,
      duration: 0.5
    })
    .to(".st-at", {
      x: "-30%",
      y: "-86%",
      scale:0.4,
      duration: 0.3
    }, ">0.1")
    .to(".st-at", {
      x: "-30%",
      y: "-120%",
    }, ">+=6")
    

</script>