---
import SectionScreen from '../../components/SectionScreen.astro';
import TitleCard from '../../components/TitleCard.astro';
import MapHN from '../../assets/img/svg/MapHN.svg'

---
<SectionScreen tipo="degradado-1" class="st-MT relative overflow-hidden hero">
  <TitleCard numero="04" titulo="Preguntas de investigaciÃ³n" class="tl-mt z-50" />
  <MapHN
    class="absolute z-0 -top-[5%] w-screen h-full scale-200 fill-background-1/20"
  />
  
</SectionScreen>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin( ScrollTrigger, SplitText );

  const tlMT = gsap.timeline({
    scrollTrigger: {
      trigger: '.tl-mt',
      start: "top center",
      end: "320% center",
      pin: true,
      scrub: 1,
      markers: false,
    }
  })

  tlMT
    .fromTo(".tl-mt",{
      xPercent: 0,
      yPercent: 100,
      opacity: 0,
      rotateX: 0,
      scale: 1,
    },{
      xPercent: 0,
      yPercent: -50,
      rotateX: 0,
      opacity: 1,
      scale: 1,
    })
    .to(".tl-mt", {
      xPercent: -35,
      yPercent: -85,
      scale:0.3,
    }, ">+=2")
    .to(".tl-mt", {
      x: "-40%",
      y: "-120%",
    }, ">+=5")
    

</script>