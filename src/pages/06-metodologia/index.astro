---
import Layout from "../../layouts/Layout.astro";
import NavSup from "../../components/NavSup.astro";
import SectionScreen from "../../components/SectionScreen.astro";
import NavFooterSection from "../../components/NavFooterSection.astro";
import NormasLegislacion from "../../layouts/Secciones/NormasLegislacion.astro";
import DataBoxTit from "../../components/DataBoxTit.astro";
import DataBoxRect from "../../components/DataBoxRect.astro";

---
<Layout title="Pregunta de investigación">
  <NavSup />
  <SectionScreen tipo="azul">
    <div class="h-screen flex flex-row justify-between">
      <div class="h-full lg:w-3/6 md:w-3/12 bg-gradient-to-b from-background-1 from-10% via-background-2 via-60% to-background-3 to-150% md:flex hidden"></div>
      <div class=" w-3/8 md:w-full bg-white py-15 lg:py-10">
        <ul class="h-full flex flex-col items-center md:items-end-safe justify-center gap-15 lg:gap-20 px-10">
          <li><p class="text-3xl lg:text-8xl font-bold">Enfoque:</p></li>
          <li><p class="text-3xl lg:text-8xl font-bold gradiant-text">Alcance:</p></li>
          <li><p class="text-3xl lg:text-8xl font-bold">Diseño:</p></li>
          <li><p class="text-3xl lg:text-8xl font-bold gradiant-text">Muestreo:</p></li>
        </ul>
      </div>
      <div class=" w-full bg-background-2 px-5 lg:px-10 py-15 lg:py-10 ">
        <ul class="h-full flex flex-col items-start justify-center gap-10 lg:gap-20 md:mt-0 lg:mt-5 mt-8">
          <li><p class="text-2xl lg:text-5xl py-2 lg:py-5 text-white">Cuantitativo</p></li>
          <li><p class="text-2xl lg:text-5xl py-2 lg:py-5 text-white">Descriptivo</p></li>
          <li><p class="text-1xl lg:text-5xl py-2 lg:py-5 text-white">No Experimental y Transversal:</p></li>
          <li><p class="text-1xl lg:text-5xl py-2 lg:py-5 text-white">No probabilístico por conveniencia, basado en expertos</p></li>
        </ul>
      </div>
    </div>
  </SectionScreen>
</Layout>

<style>
  .gradiant-text {
    width: fit-content;
      color: #3d56cf; 
      background-image: linear-gradient(45deg, var(--color-secondary-2) , var(--color-secondary)); 
      background-clip: text; 
      -webkit-background-clip: text; 
      -webkit-text-fill-color: transparent;
  }
</style>
